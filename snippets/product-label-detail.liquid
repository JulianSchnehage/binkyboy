<div class="product-label-container" data-dynamic-variant-content="{{ section.id }}-product-label">
  {%- if product.metafields.theme.label != blank -%}
    <span class="product-label product-label--meta">
      <span>{{ product.metafields.theme.label | escape }}</span>
    </span>
  {%- endif -%}

  {%- if section.settings.show_variant_media_label and current_variant and current_variant.metafields.theme.label != blank -%}
    <span class="product-label product-label--meta">
      <span>{{ current_variant.metafields.theme.label | escape }}</span>
    </span>
  {%- endif -%}

  {%- liquid
    if settings.prod_new_show
      if settings.prod_new_method == 'date'
        assign now_s = 'now' | date: '%s' | plus: 0
        assign pub_s = product.created_at | date: '%s' | plus: 0
        assign diff_days = now_s | minus: pub_s | divided_by: 86400

        if diff_days < settings.prod_new_limit_int
          assign new_label_text = 'products.product.new' | t
        endif
      elsif settings.prod_new_method == 'tag'
        if product.tags contains 'New' or product.tags contains 'new'
          assign new_label_text = 'products.product.new' | t
        endif
      else
        for collection in product.collections
          assign split_collection_handle = collection.handle | split: '-'
          if split_collection_handle contains 'new'
            assign new_label_text = 'products.product.new' | t
            break
          endif
        endfor
      endif
    endif
  -%}
  {%- if new_label_text -%}
    <span class="product-label product-label--new-in">
      <span>{{ new_label_text }}</span>
    </span>
  {%- endif -%}

  {%- if current_variant -%}
    {%- liquid
      assign sale_label_text = false
      if settings.prod_reduction_show and current_variant.compare_at_price > current_variant.price
        if settings.prod_reduction_type == 'percent'
          assign amount = 1.0 | times: current_variant.price | divided_by: current_variant.compare_at_price
          assign amount = 1.0 | minus: amount
          assign amount = amount | times: 100.0 | round
          assign sale_label_text = 'products.product.percent_reduction' | t: amount: amount
        else
          assign amount = current_variant.compare_at_price | minus: current_variant.price | money
          assign sale_label_text = 'products.product.value_reduction_html' | t: amount: amount
        endif
      endif
    -%}
    {%- if sale_label_text -%}
      <span class="product-label product-label--sale">
        <span>{{ sale_label_text }}</span>
      </span>
    {%- endif -%}
  {%- endif -%}
</div>
